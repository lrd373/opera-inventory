extends layout 

block content
  .deleteContainer 
    h1 Delete 
      a(class="itemLink" href=aria.url) #{aria.name} 
      | from #{aria.opera.name}

    h2 Are you sure you want to delete this aria?
    form(action="" method="POST")
      input(type="hidden" name="ariaId" value=aria._id)
      input(type="submit" value="Yes, Delete") 
