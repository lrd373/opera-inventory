extends layout

block content
  h1= composer.fullname

  if composer.birth_date && composer.death_date
    p= composer.birth_date_local + ' - ' + composer.death_date_local
  else if composer.birth_date
    p= 'Born: ' + composer.birth_date_local
  else if composer.death_date 
    p= 'Died: ' + composer.death_date_local

  h2 Operas:
  if opera_list 
    ul 
      each opera in opera_list 
        li 
          a(href= opera.url) #{opera.name} 
  a(href="/create/opera") Add opera
